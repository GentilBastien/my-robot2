{
  "testEnvironment": "node",
  "testMatch": ["**/*.spec.ts"],
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.ts?$": [
      "ts-jest",
      {
        "useESM": true,
        "tsconfig": "tsconfig.json"
      }
    ]
  },
  "moduleFileExtensions": ["ts", "js", "json"],
  "clearMocks": true
}
