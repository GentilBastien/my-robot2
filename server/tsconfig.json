{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@entities/*": ["entities/*"],
      "@events/*": ["events/*"],
      "@managers/*": ["managers/*"],
      "@resolvers/*": ["event-resolvers/*"],
      "@states/*": ["states/*"],
      "@systems/*": ["systems/*"],
      "@structures/*": ["structures/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
