{
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "env": {
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2023,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-unused-vars": "off"
    // Optional: Add extra linting rules if required
  },
  "overrides": [
    {
      "files": ["**/*.spec.ts"],
      "env": {
        "jest": true
      }
    }
  ]
}
